<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.mike.shareme.Create_profile"
    >

  <TextView
      android:id="@+id/txt_create_profile"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="90dp"
      android:fontFamily="@font/roboto_bold"
      android:text="@string/create_profile"
      android:textColor="#000"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_editor_absoluteX="151dp"
      tools:layout_editor_absoluteY="84dp"
      />
  <TextView
      android:id="@+id/txt_enter_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:fontFamily="@font/roboto_bold"
      android:text="@string/enter_name"
      android:textColor="#000"
      android:textSize="14sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txt_create_profile"
      tools:layout_editor_absoluteX="66dp"
      />
  <Button
      android:id="@+id/btn_next"
      android:layout_width="78dp"
      android:layout_height="41dp"
      android:text="@string/next"
      android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_editor_absoluteX="282dp"
      tools:layout_editor_absoluteY="2dp"
      style="@style/ButtonBorderLess"
      />
  <ImageView
      android:id="@+id/img_picture"
      android:layout_width="57dp"
      android:layout_height="53dp"
      app:srcCompat="@mipmap/ic_launcher_round"
      tools:layout_editor_absoluteY="191dp"
      tools:layout_editor_absoluteX="73dp"
      app:layout_constraintTop_toTopOf="@+id/edt_name"
      app:layout_constraintEnd_toStartOf="@+id/edt_name"
      android:layout_marginEnd="8dp"
      />
  <EditText
      android:id="@+id/edt_name"
      android:layout_width="226dp"
      android:layout_height="wrap_content"
      android:ems="10"
      android:inputType="textPersonName"
      android:hint="@string/enter_a_name"
      tools:layout_editor_absoluteY="194dp"
      tools:layout_editor_absoluteX="144dp"
      android:layout_marginTop="37dp"
      app:layout_constraintTop_toBottomOf="@+id/txt_enter_name"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/txt_enter_name"
      android:layout_marginStart="52dp"
      android:layout_marginEnd="53dp"
      />
